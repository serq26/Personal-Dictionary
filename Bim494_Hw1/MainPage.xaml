             x:Class="Bim494_Hw1.MainPage" BackgroundColor="White" Title="My Vocabulary">
    <ContentPage.Content>
        <StackLayout  Orientation="Vertical">
            <StackLayout VerticalOptions="StartAndExpand" Orientation="Vertical">
                <StackLayout Orientation="Horizontal">
                
                    <Entry x:Name="EntryTxt" Margin="10,10,0,0" HorizontalOptions="Start" WidthRequest="340" Placeholder="Enter Word" PlaceholderColor="Gray"></Entry>
                    <Image HorizontalOptions="End" Source="https://cdn2.iconfinder.com/data/icons/atrous/512/search_magnifying_glass_find-256.png" HeightRequest="30" WidthRequest="30">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                        </Image.GestureRecognizers>
                    </Image>

                </StackLayout>
                <Label Margin="20,10,0,10" x:Name="TranslatedWord" FontSize="18" FontAttributes="Bold" TextColor="Green"></Label>
            </StackLayout>

