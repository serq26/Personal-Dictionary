                    <StackLayout Orientation="Horizontal" Margin="20,0,0,0">
                        
                        <Label Text="TR > EN"></Label>
                        <Switch x:Name="trtoen" BackgroundColor="White"></Switch>
                        
                    </StackLayout>
                    
